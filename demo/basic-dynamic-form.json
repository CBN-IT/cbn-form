{
	"types": {
		"text": "cbn-basic-input"
	}, 
	"defaults": {
		"group-flex": {
			"type": "group",
			"wrapChildren": {
				"element": "div", 
				"className": "row group-inner"
			}
		},
		"input": {
			"decorator": "cbn-basic-input-decorator",
			"preview": false
		}
	},
	"elements": [
		{
			"inherit": "group-flex", 
			"caption": "Personal Data",
			"toggleable" : true,
			
			"children": [
				{
					"inherit": "input",
					"name": "personal.firstname",
					"defaultValue": "It's",
					"type": "text",
					"preview": true,
					"label": "First Name",
					"className": "col-xs-6 col-md-6",
					"validation": {
						"required": { "validate": true, "message": "This field is required!" },
						"pattern": "^[a-zA-Z .]+$"
					},
					"autoValidate": true,
					"validationMessage": "Invalid name!"
				},
				{
					"inherit": "input",
					"name": "personal.lastname",
					"defaultValue": "Me",
					"type": "text",
					"preview": true,
					"label": "Last Name", 
					"className": "col-xs-6 col-md-6",
					"validation": {
						"required": { "validate": true, "message": "This field is required!" },
						"pattern": "^[a-zA-Z .]+$"
					},
					"autoValidate": true,
					"validationMessage": "Invalid name!"
				},
				{
					"inherit": "input",
					"name": "personal.email",
					"type": "text",
					"preview": false,
					"label": "Email",
					"className": "col-xs-12 col-md-6",
					"validation": {
						"required": true,
						"email": true
					},
					"autoValidate": true,
					"validationMessage": "Invalid email!"
				},
				{
					"inherit": "input",
					"name": "personal.address",
					"type": "textarea",
					"rows": 4,
					"preview": false,
					"label": "Address", 
					"className": "col-xs-12",
					"validation": {
						"required": { "validate": true, "message": "This field is required!" }
					},
					"autoValidate": true
				}
			]
		},
		{
			"type": "group",
			"caption": "Test Fieldset 2",
			
			"children": [
				{
					"inherit": "input",
					"name": "test",
					"type": "text",
					"label": "Tot nume"
				}, 
				{
					"inherit": "input",
					"name": "test2", 
					"type": "text", 
					"label": "Test 2"
				}
			]
		}
	]
}
